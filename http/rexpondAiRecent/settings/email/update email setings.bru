meta {
  name: update email setings
  type: http
  seq: 1
}

put {
  url: {{BaseUrl}}api/settings/email
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer YOUR_AUTH_TOKEN
  Accept: application/json
  Content-Type: application/json
}

body:json {
  {
    "auto_archive_low_priority": true,
    "newsletter_auto_categorize": false,
    "email_retention_days": 30
  }
}

settings {
  encodeUrl: false
}
